pip install SpeechRecognition
pip install pyaudio          # may need system-specific install steps
pip install pyttsx3



import speech_recognition as sr
import pyttsx3

# Initialize recognizer and TTS engine
recognizer = sr.Recognizer()
engine = pyttsx3.init()

def speak(text: str):
    """Jarvis speaks the given text."""
    engine.say(text)
    engine.runAndWait()

def listen() -> str | None:
    """Listen from microphone and return recognized text, or None on error."""
    with sr.Microphone() as source:
        print("Listening...")
        recognizer.adjust_for_ambient_noise(source, duration=0.5)
        audio = recognizer.listen(source)

    try:
        print("Recognizing...")
        text = recognizer.recognize_google(audio, language="en-US")
        print(f"You said: {text}")
        return text
    except sr.UnknownValueError:
        print("Sorry, I could not understand.")
        return None
    except sr.RequestError as e:
        print(f"API error: {e}")
        return None

if __name__ == "__main__":
    speak("Hello sir, Jarvis online. How can I help you?")
    while True:
        command = listen()
        if not command:
            continue

        command = command.lower()

        if "stop jarvis" in command or "goodbye" in command:
            speak("Shutting down. Have a nice day.")
            break
        elif "hello" in command:
            speak("Hello. How are you today?")
        elif "your name" in command:
            speak("I am Jarvis, your personal assistant.")
        else:
            speak("You said " + command)
